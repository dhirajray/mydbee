function checkEmail(email){ 
	var email = email.trim();
	var url = '<?php echo $this->url(array('controller'=>'Registration','action'=>'checkuniqueemail','page'=>$this->page),'default',true);?>/ckemail/'+ email;
	$.ajax({
		  url: url ,
		 
		  success: function( data ) {
			
		  	if(data){
				$("#unique").html(data);
				$("#email").val('');
			}else{
				$("#unique").html('');
			}
		  }
	});
	
}
